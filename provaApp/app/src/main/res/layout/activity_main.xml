<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/lexend_deca_thin"
        android:text="Calculadoras"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clorefrioID"
        android:layout_width="171dp"
        android:layout_height="173dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/friecal" />

    <ImageView
        android:id="@+id/distanciaID"
        android:layout_width="162dp"
        android:layout_height="171dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/distancia" />

    <Button
        android:id="@+id/criadorID"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="289dp"
        android:background="#FF0000"
        android:backgroundTint="#FF0000"
        android:text="Criador"
        android:textColorLink="#F3DCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clorefrioID" />
</androidx.constraintlayout.widget.ConstraintLayout>