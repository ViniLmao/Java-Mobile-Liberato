<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculodoisActivity">

    <EditText
        android:id="@+id/kmId"
        android:layout_width="211dp"
        android:layout_height="45dp"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/milhaId"
        android:layout_width="211dp"
        android:layout_height="45dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/KMbutton" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="81dp"
        android:text="KM para ML"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/MLbutton"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:text="Calcula"
        app:layout_constraintStart_toEndOf="@+id/resultML"
        app:layout_constraintTop_toBottomOf="@+id/milhaId" />

    <TextView
        android:id="@+id/resultML"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginStart="41dp"
        android:text="Resultado: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/milhaId" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculo de Distancia"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="84dp"
        android:text="ML para KM"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultKM" />

    <Button
        android:id="@+id/KMbutton"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:text="Calcula"
        app:layout_constraintStart_toEndOf="@+id/resultKM"
        app:layout_constraintTop_toBottomOf="@+id/kmId" />

    <TextView
        android:id="@+id/resultKM"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginStart="41dp"
        android:text="Resultado: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kmId" />

    <Button
        android:id="@+id/voltarButton"
        android:layout_width="168dp"
        android:layout_height="95dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="48dp"
        android:background="#271E1E"
        android:text="VOLTAR"
        android:textColorLink="#FA0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MLbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>